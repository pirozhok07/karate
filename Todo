        const tags = tagsInput.value.split(',').map(tag => tag.trim());
        
        if (text) {
            alert(`–ó–∞–ø–∏—Å—å —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∞!\n–¢–µ–∫—Å—Ç: ${text}\n–¢–µ–≥–∏: ${tags.join(', ')}`);
